{
  "name": "nodejs-esm",
  "version": "1.0.0",
  "description": "NodeJS CJS",
  "type": "module",
  "scripts": {
    "start": "npm-run-all -l -p bin:*",
    "bin:consumer": "tsx --env-file=.env bin/consumer.ts",
    "bin:publisher": "tsx --env-file=.env bin/publisher.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nixbus/event-bus": "0.0.20",
    "npm-run-all": "4.1.5",
    "tsx": "4.19.1"
  },
  "devDependencies": {
    "@eslint/js": "9.10.0",
    "eslint": "9.10.0",
    "eslint-plugin-no-relative-import-paths": "1.5.5",
    "eslint-plugin-react": "7.36.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "globals": "15.9.0",
    "prettier": "3.3.3",
    "typescript-eslint": "8.5.0"
  },
  "prettier": {
    "$schema": "https://json.schemastore.org/prettierrc",
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  }
}
